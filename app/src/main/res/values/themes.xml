<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.WeChat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.WeChat.translucentScreenWhiteStatusBar"  parent="Theme.WeChat">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <style name="HintTextAppearance" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/colorSecondaryText</item>
    <item name="android:textSize">12sp</item>
    </style>
    <style name="InputTextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:labelTextSize">12sp</item>
    </style>

</resources>